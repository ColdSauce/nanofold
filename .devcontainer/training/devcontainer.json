{
	"name": "Training Dev Container",
	"mounts": [
		"source=/home/ogchen/data,target=/data,type=bind,consistency=cached"
	],
	"dockerComposeFile": ["../../docker/docker-compose.train.yml", "docker-compose.extend.yml"],
	"service": "train",
	"workspaceFolder": "/workspace",
	"shutdownAction": "stopCompose",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter",
				"GitHub.copilot"
			],
			"settings": {
				"python.testing.pytestArgs": [
					"tests/training"
				]
			}
		}
	}
}
