{
	"name": "Data Preprocessing Dev Container",
	"dockerComposeFile": ["../../docker/docker-compose.preprocess.yml", "docker-compose.extend.yml"],
	"service": "preprocess",
	"workspaceFolder": "/workspace",
	"shutdownAction": "stopCompose",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter",
				"GitHub.copilot"
			],
			"settings": {
				"python.testing.pytestArgs": [
					"tests/preprocess"
				]
			}
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	}
}