{
	"name": "Data Processing Dev Container",
	"dockerComposeFile": ["../../docker/docker-compose.process.yml", "docker-compose.extend.yml"],
	"service": "data_processing",
	"workspaceFolder": "/workspace",
	"shutdownAction": "stopCompose",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.black-formatter",
				"GitHub.copilot"
			],
			"settings": {
				"python.testing.pytestArgs": [
					"tests/data_processing"
				]
			}
		}
	}
}